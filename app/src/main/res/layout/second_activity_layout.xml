<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Second Activity"
        android:layout_marginTop="40dp"
        android:id="@+id/textTitle"/>

    <Button
        android:id="@+id/btnNavMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textTitle"
        android:layout_marginTop="20dp"
        android:text="Go to Main activity" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNavMainActivity"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Nome:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp">
    </EditText>

    <TextView
        android:id="@+id/text_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Voto:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_mark"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_mark"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp">
    </EditText>

    <Button
        android:id="@+id/add_game"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_mark"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="+" />

    <ListView
        android:id="@+id/listview_gamelist"
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:layout_below="@+id/btnNavMainActivity"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:choiceMode="multipleChoice">
    </ListView>

</RelativeLayout>